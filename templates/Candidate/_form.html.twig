            {{ form_label(form.gender) }}
            {{ form_widget(form.gender, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.businessRole, 'Role', {'label_attr':
                {'class': 'w-100'}}) }}
            {{ form_widget(form.businessRole, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.experience) }}
            {{ form_widget(form.experience, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.domains, 'Domains', {'label_attr':
                {'class': 'text-center'}}) }}
            {{ form_widget(form.domains, {'attr':
                {'class': 'text-center'}}) }}

        </div>
        {# Right container #}
        <div class="row-col col-lg-5 vstack gap-1">
            {{ form_label(form.lastName, 'Nom')  }}
            {{ form_widget(form.lastName, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.linkedin) }}
            {{ form_widget(form.linkedin, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.disponibilities, 'Disponibilitée') }}
            {{ form_widget(form.disponibilities, {'attr':
