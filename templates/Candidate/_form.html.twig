            {{ form_label(form.telework) }}
            {{ form_widget(form.telework, {'attr':
                {'class': 'text-start'}}) }}
            {{ form_label(form.salary) }}
            {{ form_widget(form.salary, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.skills, 'Compétences', {'label_attr':
                {'class': 'text-center'}}) }}
            {{ form_widget(form.skills, {'attr':
                {'class': 'text-center form-check-reverse'}}) }}

        </div>
    </div>
            {{ form_label(form.vehicle) }}
            {{ form_widget(form.vehicle) }}

        <div class="hstack justify-content-around w-100 ">

            <div class=" w-50">
                {{ form_label(form.user, 'Vendeur') }}
                {{ form_widget(form.user, {'attr':
                    {'class': 'text-center'}}) }}
            </div>
            <div class="w-50">
                {{ form_label(form.prime, 'Prime vendeur') }}
                {{ form_widget(form.prime, {'attr':
                    {'class': 'text-center'}}) }}
            </div>

        </div>

    <div class="w-100 vstack gap-2">
        {{ form_label(form.observation, 'Observation', {'label_attr':
            {'class': 'w-100 text-center'}}) }}
        {{ form_widget(form.observation) }}
    <div class="d-flex justify-content-between">
        <div class="w-50">
            {{ form_label(form.validatedBy, 'Validé par', {'label_attr':
                {'class': 'w-100 text-center'}}) }}
            {{ form_widget(form.validatedBy, {'attr':
                {'class': 'text-center'}}) }}
        </div>
        <div class="w-50">
            {{ form_label(form.validateSheet, 'Fiche validé', {'label_attr':
                {'class': 'w-100 text-center'}}) }}
            {{ form_widget(form.validateSheet, {'attr':
                {'class': 'text-center'}}) }}
        </div>
    </div>
    <div class="hstack gap-2 mt-3 justify-content-around">
        {{ form_label(form.archived) }}
        {{ form_widget(form.archived, {'attr' :
            {'class': 'text-center'}}) }}
        <button class="btn btn-afternoon btn-outline-light btn-block link-white">{{ button_label|default('Save') }}</button>
    </div>
</div>
{{ form_end(form) }}
