{% form_theme form 'bootstrap_5_layout.html.twig' %}
{{ form_start(form, {'attr':
    {'class': 'container vstack gap-1'}}) }}

    <div class="container2col d-flex justify-content-around gap-3">

        {# Left container #}
        <div class="row-col col-lg-5 vstack gap-1">
            {{ form_label(form.firstName, 'Prénom') }}
            {{ form_widget(form.firstName, {'attr':
                {'class': 'text-center'}}) }}
            {{ form_label(form.phone) }}
