{% extends 'base.html.twig' %}

{% block title %}Candidate Form{% endblock %}
{% block h1 %}Editer la fiche candidat{% endblock %}

{% block breadcrum%}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('candidate_index') }}">Dépôt candidat</a></li>
            <li class="breadcrumb-item active" aria-current="page">CV Candidat de {{ candidate.firstName }} {{ candidate.lastName }}</li>
        </ol>
    </nav>

{% endblock %}


{# Add button "Déjà créer" #}
{% block content %}
<div class="container-fluid">
    <div class="row hstack gap-1">

        <!-- Form container -->
        <div class="row-col col-5">
            {{ include('Candidate/_form.html.twig', {'button_label': 'Valider la fiche'}) }}
        </div>
    <div class="row-col col-6 vstack">
        <object class="img-fluid" data="{{ vich_uploader_asset(candidate, 'cvFile') }}" style="min-width: 100%; min-height: 100%;"></object>
    </div>
</div>
{% endblock %}
