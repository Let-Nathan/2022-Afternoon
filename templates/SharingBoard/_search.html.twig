<div class="col-lg-10">
    {{ form_start(form, {'attr':
        {'class': 'vstack justify-content-center gap-2'}}) }}

                {{ form_widget(form.seller, {'attr':
                    {'class': 'w-100 rounded-2'}}) }}
                {{ form_widget(form.buyer,  {'attr':
                    {'class': 'w-100 rounded-2'}}) }}
                {{ form_widget(form.candidateName, {'attr':
                    {'class': 'w-100 rounded-2'}}) }}
                {{ form_widget(form.status, {'attr':
                    {'class': 'w-100 rounded-2'}}) }}
                <div class="hstack justify-content-center">
                    {{ form_row(form.creationDate, {'attr':
                        {'class': 'w-100 rounded-2'}}) }}
                    {{ form_widget(form.dateRelance, {'attr':
                        {'class': 'w-75 rounded-2'}}) }}
                    {{ form_widget(form.endDate, {'attr':
                    {'class': 'w-75 rounded-2'}}) }}
                </div>
                <div class="hstack justify-content-center">
                    {{ form_widget(form.send, {'attr':
                        {'class': 'hstack justify-content-center btn btn-primary m-0 p-1 rounded-2 col-10 col-lg-5'}}) }}
                </div>
    {{ form_end(form) }}
</div>
