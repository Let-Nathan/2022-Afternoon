{% extends 'base.html.twig' %}

{% block h1 %}Comptes administrateurs{% endblock %}

{% block content %}
        <div class="mb-4">
            <a class="button btn btn-outline-light btn-block link-white" href="{{ path('admin_new') }}">Ajouter un admin</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Mail</th>
                    <th>Nombre de fiches créées à régler</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {%  for admin in admins %}
                <tr>
                    <td>{{ admin.firstname }}</td>
                    <td>{{ admin.lastname }}</td>
                    <td>{{ admin.email }}</td>
                    <td>Nb fiches</td>
                    <td>
                        <a class="btn btn-secondary btn-sm" href="{{ path('edit_admin', {id: admin.id}) }}">Modifier</a>
                        <a class="btn btn-danger btn-sm" data-confirm href="{{ path('account_admin_delete', {id: admin.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {%  endfor %}

            </tbody>
        </table>
{% endblock %}
