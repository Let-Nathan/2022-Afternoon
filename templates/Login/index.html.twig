{% extends 'layout-2cols.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div class="text-white">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Login Admin</h1>
    <p>* champs obligatoires</p>

    <form action="{{ path('app_login') }}" method="post">
        <label class="text-white" for="username">Email *</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label class="text-white" for="password">Mot de passe *</label>
        <input type="password" id="password" name="_password"/>

        <p>Mot de passe oubli√© ?</p>


        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button class="btn btn-outline-info" type="submit">Se connecter</button>
        <p>Pas encore de compte ? S'inscrire</p>

    </form>
{% endblock %}
