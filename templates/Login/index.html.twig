{% extends 'layout-2maxicols.html.twig' %}

{% block leftBlock %}

    <div class="d-flex vstack justify-content-around">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>Login Admin</h1>

        <p>* champs obligatoires</p>

        <div class="d-flex vstack justify-content-around">
            <form action="{{ path('app_login') }}" method="post">
                <div class="d-flex vstack justify-content-around">
                    <label class="text" for="username">Email *</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                    <label class="text" for="password">Mot de passe *</label>
                    <input type="password" id="password" name="_password"/>
                </div>

                <p>Mot de passe oubli√© ?</p>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                <button class="btn btn-outline-info" type="submit">Se connecter</button>

            </form>
        </div>
    </div>
{% endblock %}
