{% extends 'layout-2maxicols.html.twig' %}

{% block leftBlock %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="my-5 text-light">Connexion Admin</h1>

    <div class="">
        <form action="{{ path('app_login') }}" method="post">

            <input type="text" class="form-control mb-4" id="username" name="_username" value="{{ last_username }}" placeholder="E-mail"/>
            <input type="password" class="form-control mb-3" id="password" name="_password" placeholder="Password"/>

            <p class="text-end"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a></p>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-afternoon btn-outline-white my-4 link-light" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}
